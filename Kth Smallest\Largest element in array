Kth Largest element in array using QuickSelect with Random pivot included

class Solution {
    public static void swap(int[] a, int i, int j) {
        int temp = a[i];
        a[i] = a[j];
        a[j] = temp;
    }
    public static int partition(int[] a, int l, int r, int k) {
        int pos = l;
        int pivot = a[r];
        
        for(int i=l; i<r; i++){
            if(a[i]<= pivot) {
                swap(a, i ,pos);
                pos++;
            }
        }
        swap(a, pos, r);
        return pos;
    }
    public static int randomPartition(int[] a, int l, int r, int k) {
        Random rd = new Random();
        int n = r-l+1;
        int pivot = rd.nextInt(n);
        swap(a, l+pivot, r);
        return partition(a, l, r, k);
    }
    public static int quickSelect(int[] a, int l, int r, int k){
       
        
        int mid = randomPartition(a, l, r, k);
        if(mid == k)
            return mid;
        else if(mid > k) {
            return quickSelect(a, l, mid-1, k);
        }
        
        else return quickSelect(a, mid+1, r, k);
        
    
        
    }
    public int findKthLargest(int[] nums, int k) {
        int acutalPosition = nums.length-k;
        
        int mid = quickSelect(nums, 0, nums.length-1, acutalPosition);
        return nums[mid];
    }
}


Kth Smallest element in array using QuickSelect with Random pivot included

class Solution {
    public static void swap(int[] a, int i, int j) {
        int temp = a[i];
        a[i] = a[j];
        a[j] = temp;
    }
    public static int partition(int[] a, int l, int r, int k) {
        int pos = l;
        int pivot = a[r];
        
        for(int i=l; i<r; i++){
            if(a[i]<= pivot) {
                swap(a, i ,pos);
                pos++;
            }
        }
        swap(a, pos, r);
        return pos;
    }
    public static int randomPartition(int[] a, int l, int r, int k) {
        Random rd = new Random();
        int n = r-l+1;
        int pivot = rd.nextInt(n);
        swap(a, l+pivot, r);
        return partition(a, l, r, k);
    }
    public static int quickSelect(int[] a, int l, int r, int k){
       
        
        int mid = randomPartition(a, l, r, k);
        if(mid == k)
            return mid;
        else if(mid > k) {
            return quickSelect(a, l, mid-1, k);
        }
        
        else return quickSelect(a, mid+1, r, k);
        
    
        
    }
    public int findKthLargest(int[] nums, int k) {
        int acutalPosition = nums.length-k;
        
        int mid = quickSelect(nums, 0, nums.length-1, acutalPosition);
        return nums[mid];
    }
}
